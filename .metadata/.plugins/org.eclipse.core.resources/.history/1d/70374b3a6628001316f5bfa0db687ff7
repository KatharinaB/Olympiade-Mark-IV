package ui.PlayerView.Elements;

import java.awt.Color;
import java.awt.Dimension;

import javax.swing.JLabel;
import javax.swing.border.LineBorder;

/**
 * Hält das Label "Team" und dazugehörigen Wert
 * @author Katy
 *
 */
public class PlayerteamNameLabel extends JLabel{

	private JLabel teamLabel;
	private JLabel teamName;
	
	public PlayerteamNameLabel() {
		this.setBounds(350,50,80,15);
		this.setBorder(new LineBorder(Color.ORANGE));
		initLabels();
		setTeamName();
	}

	private void initLabels() {
		
		teamLabel = new JLabel("Team:");
		teamName = new JLabel();
		
		teamLabel.setPreferredSize(new Dimension(70,15));
		teamName.setPreferredSize(new Dimension(70,15));
		
		this.add(teamLabel);
		this.add(teamName);
	}

	private void setTeamName() {
		teamName.setText("dummyteam");//TODO aus DB
		
	}

}
