import java.awt.Color;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JLayeredPane;
import javax.swing.JPanel;
import javax.swing.border.LineBorder;


public class MainPanel extends JLayeredPane{
	
	
	/**
	 * 
	 */
	private static final long serialVersionUID = 1L;

	private JLabel teamnameLabel;
	private JButton button;
	
	
	public MainPanel(){
		
		teamnameLabel = new JLabel("Teamname");
		initLabel(teamnameLabel);
		this.add(teamnameLabel, new Integer(1), 0);
		
		initMainPanel();
		
		initNavigationPanel();
		
	}
	
	public void initNavigationPanel(){
		JButton [] buttons;
		JPanel navigationPanel = new JPanel();
		
		
		buttons = initNavigationButtons();
		
	}
	
	public JButton[] initNavigationButtons(){
		JButton [] buttons = new JButton [9];
		
		JButton overviewButton = new JButton("Overview");
		JButton nextRoundButton = new JButton("next Round");
		JButton teamButton = new JButton("Team");
		JButton campButton = new JButton("Training-Camp");
		JButton topPlayersButton = new JButton("Standings");
		JButton newsButton = new JButton("Top Players");
		JButton transfersButton = new JButton("News");
		JButton rumorsButton = new JButton("Transfers");
		JButton prizeMoneyButton = new JButton("Rumors");
		return ;
		
	}
	
	public void initLabel(JLabel teamnameLabel){
		teamnameLabel.setText("Teamname");
		teamnameLabel.setSize(200, 50);	
		teamnameLabel.setBounds(400, 10, 200, 30);
		teamnameLabel.setBorder(new LineBorder(Color.BLACK));
		teamnameLabel.setVisible(true);

	}
	
	public void initMainPanel(){
		this.setBackground(Color.BLACK);
		this.setSize(200,200);
		this.setVisible(true);
		this.setLayout(null);
		this.setBounds(100,100,100,100);
	}

}
