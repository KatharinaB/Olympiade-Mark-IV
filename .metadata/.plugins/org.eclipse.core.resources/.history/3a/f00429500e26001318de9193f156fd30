import java.awt.Color;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JLayeredPane;


public class MainPanel extends JLayeredPane{
	
	
	/**
	 * 
	 */
	private static final long serialVersionUID = 1L;

	private JLabel teamnameLabel;
	private JButton button;
	
	
	public MainPanel(){
		teamnameLabel = new JLabel("Teamname");
		teamnameLabel.setText("Teamname");
		teamnameLabel.setSize(200, 50);	
		teamnameLabel.setBounds(100,100,100,100);
		teamnameLabel.setVisible(true);
		
		
		button = new JButton();
		button.setText("Klick mcih");
		button.setVisible(true);
		button.setBackground(Color.GREEN);
		button.setBounds(100, 100, 100, 100);
		
		this.add(button, new Integer(1), 0);
		this.add(teamnameLabel, new Integer(1), 0);
		
		this.setBackground(Color.BLACK);
		this.setSize(200,200);
		this.setVisible(true);
		this.setLayout(null);
		this.setBounds(100,100,100,100);
		
	}

}
