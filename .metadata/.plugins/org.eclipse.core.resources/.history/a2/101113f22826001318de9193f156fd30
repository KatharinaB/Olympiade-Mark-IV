import javax.swing.JPanel;
import javax.swing.JTextArea;


public class TickerPanel extends JPanel{
	
	private JTextArea newsticker;
	private JTextArea transferticker;
	
	public TickerPanel(){
		
		initTransferticker();
		initNewsticker();
		
		this.add(newsticker);
		this.add(transferticker);
	}
	
	private void initTransferticker() {
		transferticker = new JTextArea("newsticker (Anzeige der letzten News");
		transferticker.setPreferredSize(new Dimension(250, 100));
		
	}
	
	private void initNewsticker() {
		newsticker = new JTextArea("Transferticker (Anzeige der letzten Transfers");
		newsticker.setBounds(1010, 250, 250, 100);
	}


}
