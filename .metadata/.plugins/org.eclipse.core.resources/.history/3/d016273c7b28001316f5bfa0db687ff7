package ui.PlayerView;

import java.awt.Color;

import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.border.LineBorder;

public class PlayerRelationshipPanel extends JPanel{
	
	private JLabel relationshipTypeLabel;
	private JLabel relationshipMembersLabel;
	private String relationShipType;
	
	public PlayerRelationshipPanel(String type) {
		this.relationShipType = type;
		
		this.setBounds(330,250,390,100);
		this.setBorder(new LineBorder(Color.DARK_GRAY));
		
		initRelationShipLabels();
		
		this.add(relationshipMembersLabel);
		this.add(relationshipTypeLabel);
	}

	private void initRelationShipLabels() {
		relationshipTypeLabel =  new JLabel(relationShipType);
		relationshipTypeLabel.setPreferredSize(new Dimension());
		//TODO aus Db String zusammen bauen und einfügen
		relationshipMembersLabel = new JLabel("vars mit Links");
	}

}
